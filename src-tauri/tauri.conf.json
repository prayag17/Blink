{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "JellyPlayer",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"process": {
				"all": false,
				"exit": true,
				"relaunch": true,
				"relaunchDangerousAllowSymlinkMacos": false
			},
			"window": {
				"setFullscreen": true
			},
			"shell": {
				"all": true
			},
			"http": {
				"all": true,
				"request": true,
				"scope": [
					"http://**",
					"http://*",
					"https://**",
					"https://*"
				]
			}
		},
		"bundle": {
			"active": true,
			"category": "Video",
			"copyright": "GPL-3.0-only",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.jellyplayer.prayag17",
			"longDescription": "A Modern Jellyfin Client for Jellyfin",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "A Modern Jellyfin Client for Jellyfin",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": "",
				"wix": {
					"bannerPath": "../public/installerBanner.bmp",
					"dialogImagePath": "../public/installerDialog.bmp"
				},
				"nsis": {
					"sidebarImage": "../public/installerSideBarImage.bmp",
					"headerImage": "../public/installerHeaderImage.bmp",
					"installerIcon": "icons/icon.ico"
				}
			}
		},
		"security": {
			"csp": null,
			"dangerousRemoteDomainIpcAccess": [
				{
					"domain": "**",
					"windows": ["main"],
					"enableTauriAPI": true
				},
				{
					"domain": "*",
					"windows": ["main"],
					"enableTauriAPI": true
				}
			]
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"width": 800,
				"resizable": true,
				"title": "JellyPlayer",
				"visible": true,
				"center": true,
				"label": "main"
			}
		]
	}
}
