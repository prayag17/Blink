{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "JellyPlayer",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false
		},
		"bundle": {
			"active": true,
			"category": "Video",
			"copyright": "GPL-3.0-only",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.jellyplayer.prayag17",
			"longDescription": "A Modern Jellyfin Client for Jellyfin",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "A Modern Jellyfin Client for Jellyfin",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"width": 800,
				"resizable": true,
				"title": "JellyPlayer",
				"visible": false,
				"center": true
			},
			{
				"width": 800,
				"height": 300,
				"center": true,
				"decorations": false,
				"resizable": false,
				"url": "splash.html",
				"label": "splashscreen"
			}
		]
	}
}
