{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "JellyPlayer",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"process": {
				"all": false,
				"exit": true,
				"relaunch": true,
				"relaunchDangerousAllowSymlinkMacos": false
			},
			"window": {
				"all": true,
				"setFullscreen": true
			},
			"shell": {
				"all": true
			},
			"http": {
				"all": true,
				"request": true,
				"scope": ["http://**", "http://*", "https://**", "https://*"]
			}
		},
		"bundle": {
			"active": true,
			"category": "Video",
			"copyright": "GPL-3.0-only",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.jellyplayer.prayag17",
			"longDescription": "A modern desktop client for Jellyfin",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "JellyPlayer",
			"targets": ["deb", "appimage", "nsis", "app", "dmg", "updater"],
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": "",
				"nsis": {
					"sidebarImage": "../public/installerSideBarImage.bmp",
					"headerImage": "../public/installerHeaderImage.bmp",
					"installerIcon": "icons/icon.ico"
				},
				"webviewInstallMode": {
					"silent": true,
					"type": "offlineInstaller"
				}
			},
			"appimage": {
				"bundleMediaFramework": true
			}
		},
		"security": {
			"csp": null,
			"dangerousRemoteDomainIpcAccess": [
				{
					"domain": "**",
					"windows": ["main"],
					"enableTauriAPI": true
				},
				{
					"domain": "*",
					"windows": ["main"],
					"enableTauriAPI": true
				}
			]
		},
		"updater": {
			"active": true,
			"endpoints": [
				"https://raw.githack.com/prayag17/JellyPlayer/main/latest.json"
			],
			"dialog": false,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk5QkE0QjMzOEQyRUI5M0MKUldROHVTNk5NMHU2bVMvS3VNRWZHRzhuWE1TRlg3WHI1VHBtZjFvVy80alZ2UHc4T3BqcHVGOWwK"
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"width": 800,
				"resizable": true,
				"title": "JellyPlayer",
				"visible": true,
				"center": true,
				"label": "main"
			}
		]
	}
}
